{
  "name": "turborepo-boilerplate",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "lint-staged-husky": "lint-staged",
    "test": "turbo run test",
    "format-lint": "prettier --config .prettierrc --check --ignore-unknown .",
    "format-fix": "prettier --config .prettierrc --write --ignore-unknown -l .",
    "commit": "git-cz",
    "clean-all": "npm exec --workspaces -- shx rm -rf node_modules .next .turbo && shx rm -rf node_modules",
    "update-all-dependencies": "turbo run update-dependencies --parallel && npx npm-check-updates -u"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.1",
    "@commitlint/config-conventional": "^17.1.0",
    "commitizen": "^4.2.5",
    "eslint": "8.23.0",
    "eslint-config-custom": "*",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "shx": "^0.3.4",
    "turbo": "^1.4.3"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=18.0.0"
  },
  "packageManager": "npm@8.15.0"
}
